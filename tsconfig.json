{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["stacks", "packages"],
	"compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
		"paths": {
			"@web/*": ["./web/src/*"],
			"@stacks/*": ["./stacks/*"],
			"@packages/*": ["./packages/*"]
		}
  }
}